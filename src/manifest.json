{
    "manifest_version": 3,
    "name": "OldTTV",
    "description": "A browser extension to bring back the old Twitch look",
    "version": "0.0.2",

    "background": {
        "service_worker": "js/ot-background.js"
    },

    "permissions": [
        "storage",
        "cookies",
        "webRequest",
        "webRequestBlocking"
    ],

    "content_scripts": [
        {
            "matches": ["*://www.twitch.tv/*"],
            "exclude_matches": ["*://www.twitch.tv/*?*nooldttv*", "*://www.twitch.tv/p/*", "*://www.twitch.tv/subs/*", "*://www.twitch.tv/embed/*"],
            "js": ["js/ot-main.js"],
            "run_at": "document_start"
        },

        {
            "matches": ["*://www.twitch.tv/*?*nooldttv*"],
            "js": ["lib/video-swap-new.user.js", "js/ot-newttv.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://www.twitch.tv/embed/*"],
            "js": ["js/ot-embed.js"],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "matches": ["*://player.twitch.tv/*"],
            "js": ["lib/video-swap-new.user.js"],
            "all_frames": true,
            "run_at": "document_start"
        }
    ],

    "web_accessible_resources": [{
        "matches": ["*://*.twitch.tv/*"],
        "resources": ["html/*", "js/*"]
    }]
}